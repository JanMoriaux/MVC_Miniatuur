<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Miniatuurland</title>
    <style>
        th a:hover {
            text-decoration: none;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        var url = Url.Content("~/Images/miniatuurland.png");
    }
    <div class="container">
        <div>
            <a href='@Url.Action("Index","Product",null)'>
                <img src=@url alt="miniatuurland logo" style="width:100%; height:200px"/>
            </a>
        </div>
        @Html.Action("NavBar", "Product")
        @*de summary van modelstate errors tonen in kader*@
        @if (ViewBag.errorcount > 0)
        {
            <div class="alert alert-warning">@Html.ValidationSummary()</div>
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Miniatuurland</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
